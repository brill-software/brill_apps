{
    "$schema": "schema://brill.software/page_schema.json",
    "pageDescrip": "Paragraph Component",
    "permission": "cms_user",
    "rootComponent": {
        "id": "ErrorBoundary",
        "module": "react/ErrorBoundary",
        "attributes": {},
        "children": [
            {
                "id": "PageDiv",
                "module": "html/Div",
                "attributes": {
                    "style": {
                        "minHeight": "100vh",
                        "padding": "20px"
                    }
                },
                "children": [
                    {
                        "id": "Module",
                        "module": "material_ui/text/Typography",
                        "attributes": {
                            "variant": "h3",
                            "gutterBottom": true,
                            "text": "html/P"
                        }
                    },
                    {
                        "id": "Attributes",
                        "module": "material_ui/text/Xhtml",
                        "attributes": {
                            "text": "<p>\nHTML Paragraph component.\n<table cellpadding=\"7\">\n<tr><td>text [optional]</td><td>Initial text.</td></tr>\n<tr><td>subscribeToTopic [optional]</td><td>Topic to subscribe to for the text.</td></tr>\n<tr><td>children [optional]</td><td>Can contains other components such as a span component for inline display.</td></tr>\n</table>\n</p>"
                        }
                    },
                    {
                        "id": "P",
                        "module": "html/P",
                        "attributes": {
                            "style": {
                                "padding": "10px",
                                "color": "green"
                            },
                            "text": "Username: "
                        },
                        "children": [
                            {
                                "id": "Username",
                                "module": "html/Span",
                                "attributes": {
                                    "style": {
                                        "padding": "10px",
                                        "color": "pink"
                                    },
                                    "subscribeToTopic": "username"
                                }
                            }
                        ]
                    }
                ]
            }
        ]
    }
}