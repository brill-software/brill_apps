{
    "pageDescrip": "CMS Change Password page",
    "rootComponent": {
        "id": "errorBoundary",
        "module": "react/ErrorBoundary",
        "attributes": {},
        "children": [
            {
                "id": "themeProvider",
                "module": "material_ui/theme/ThemeProvider",
                "attributes": {
                    "themeTopic": "/Themes/login_theme.json"
                },
                "children": [
                    {
                        "id": "outer_div",
                        "module": "html/Div",
                        "attributes": {
                            "style": {
                                "backgroundImage": "url('cranes.png')",
                                "backgroundSize": "cover",
                                "minHeight": "100vh",
                                "position": "relative"
                            }
                        },
                        "children": [
                            {
                                "id": "center_div",
                                "module": "html/Div",
                                "attributes": {
                                    "style": {
                                        "display": "flex",
                                        "flexDirection": "column",
                                        "boxShadow": "5px 10px 18px",
                                        "background": "white",
                                        "borderRadius": "30px",
                                        "opacity": "0.9",
                                        "padding": "20px",
                                        "position": "absolute",
                                        "width": "450px",
                                        "height": "450px",
                                        "top": "50%",
                                        "left": "50%",
                                        "margin": "-225px 0 0 -225px"
                                    }
                                },
                                "children": [
                                    {
                                        "id": "alertBox",
                                        "module": "material_ui/alert/Alert",
                                        "attributes": {
                                            "severity": "error",
                                            "subscribeToTopic": "app:errors:",
                                            "clearOnChangeToTopic": "app:any:",
                                            "elevation": 12,
                                            "style": {
                                                "cursor": "move"
                                            }
                                        }
                                    },
                                    {
                                        "id": "loginHeader",
                                        "module": "material_ui/text/Typography",
                                        "attributes": {
                                            "variant": "h4",
                                            "gutterBottom": true,
                                            "text": "Change Password"
                                        }
                                    },
                                    {
                                        "id": "oldPwdDescrip",
                                        "module": "material_ui/text/Typography",
                                        "attributes": {
                                            "variant": "body1",
                                            "text": "Please enter your old password."
                                        }
                                    },
                                    {
                                        "id": "oldPasswordField",
                                        "module": "material_ui/input/PasswordField",
                                        "attributes": {
                                            "label": "Old Password",
                                            "variant": "outlined",
                                            "publishToTopic": "changePasswordForm.oldPassword",
                                            "validationRules": [],
                                            "style": {
                                                "margin": "10px"
                                            }
                                        }
                                    },
                                    {
                                        "id": "descrip",
                                        "module": "material_ui/text/Typography",
                                        "attributes": {
                                            "variant": "body1",
                                            "style": {
                                                "marginTop": "10px",
                                                "marginBottom": "10px"
                                            },
                                            "text": "Please enter a new password that includes upper and lower case letters as well as digits and special characters and is at least 8 characters long and that you haven't used on other websites."
                                        }
                                    },
                                    {
                                        "id": "newPasswordField",
                                        "module": "material_ui/input/PasswordField",
                                        "attributes": {
                                            "label": "New Password",
                                            "variant": "outlined",
                                            "publishToTopic": "changePasswordForm.newPassword",
                                            "validationRules": [],
                                            "style": {
                                                "margin": "10px"
                                            }
                                        }
                                    },
                                    {
                                        "id": "confirmNewPasswordField",
                                        "module": "material_ui/input/PasswordField",
                                        "attributes": {
                                            "label": "Confirm New Password",
                                            "variant": "outlined",
                                            "publishToTopic": "changePasswordForm.confirmNewPassword",
                                            "validationRules": [],
                                            "style": {
                                                "margin": "10px"
                                            }
                                        }
                                    },
                                    {
                                        "id": "changePasswordButton",
                                        "module": "material_ui/button/SubmitButton",
                                        "attributes": {
                                            "subscribeToTopic": "changePasswordForm",
                                            "style": {
                                                "margin": "20px 10px 10px 10px"
                                            },
                                            "requestTopic": "auth:/${appName}/changePassword",
                                            "title": "Change",
                                            "variant": "contained",
                                            "color": "primary",
                                            "route": "/${appName}/edit"
                                        }
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}