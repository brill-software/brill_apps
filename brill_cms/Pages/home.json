{
    "$schema": "schema://brill.software/page_schema.json",
    "pageDescrip": "Layout",
    "permission": "cms_user",
    "rootComponent": {
        "id": "ErrorBoundary",
        "module": "react/ErrorBoundary",
        "attributes": {
            "key": "errorBoundary"
        },
        "children": [
            {
                "id": "ThemeProvider",
                "module": "material_ui/theme/ThemeProvider",
                "attributes": {
                    "style": {
                        "minHeight": "100vh"
                    },
                    "key": "themeProvider",
                    "themeTopic": "/Themes/brill_cms_theme_light.json",
                    "themeTopicDark": "/Themes/brill_cms_theme_dark.json"
                },
                "children": [
                    {
                        "id": "embedHeader",
                        "module": "material_ui/layout/EmbeddedPage",
                        "attributes": {
                            "key": "embedHeader",
                            "subscribeToTopic": "/Pages/header.json"
                        }
                    },
                    {
                        "id": "outerContainer",
                        "module": "html/Div",
                        "attributes": {
                            "style": {
                                "paddingLeft": "60px"
                            }
                        },
                        "children": [
                            {
                                "id": "alertBox",
                                "module": "material_ui/alert/Alert",
                                "attributes": {
                                    "subscribeToTopic": "app:errors:",
                                    "clearOnChangeToTopic": "app:any:",
                                    "elevation": 12,
                                    "style": {
                                        "cursor": "move"
                                    }
                                }
                            },
                            {
                                "id": "Flex Row Layout",
                                "module": "html/Div",
                                "attributes": {
                                    "style": {
                                        "display": "flex",
                                        "flexDirection": "row",
                                        "flexWrap": "wrap"
                                    }
                                },
                                "children": [
                                    {
                                        "id": "Grid Layout",
                                        "module": "html/Div",
                                        "attributes": {
                                            "style": {
                                                "paddingTop": "30px",
                                                "paddingLeft": "30px",
                                                "display": "flex",
                                                "flexDirection": "column"
                                            }
                                        },
                                        "children": [
                                            {
                                                "id": "Set Workspace",
                                                "module": "material_ui/text/Typography",
                                                "attributes": {
                                                    "variant": "h3",
                                                    "text": "Set Workspace",
                                                    "style": {
                                                        "width": "600px"
                                                    }
                                                }
                                            },
                                            {
                                                "id": "Form",
                                                "module": "material_ui/input/Form",
                                                "attributes": {
                                                    "style": {
                                                        "width": "350px",
                                                        "marginTop": "20px"
                                                    }
                                                },
                                                "children": [
                                                    {
                                                        "id": "Flex Column Layout",
                                                        "module": "html/Div",
                                                        "attributes": {
                                                            "style": {
                                                                "display": "flex",
                                                                "flexDirection": "column"
                                                            }
                                                        },
                                                        "children": [
                                                            {
                                                                "id": "Radio",
                                                                "module": "material_ui/input/RadioGroup",
                                                                "attributes": {
                                                                    "color": "primary",
                                                                    "subscribeToTopic": "config:/workspace",
                                                                    "buttonsTopic": "/Scripts/workspaceButtons.js",
                                                                    "publishToTopic": "home.form1#workspace",
                                                                    "label": "",
                                                                    "style": {
                                                                        "width": "300px"
                                                                    },
                                                                    "validationRules": [
                                                                        {
                                                                            "code": "return value.length === 0",
                                                                            "errorMsg": "Please select a workspace. "
                                                                        }
                                                                    ]
                                                                }
                                                            },
                                                            {
                                                                "id": "Submit",
                                                                "module": "material_ui/button/SubmitButton",
                                                                "attributes": {
                                                                    "title": "Set workspace",
                                                                    "variant": "contained",
                                                                    "route": "/${appName}/editor",
                                                                    "color": "primary",
                                                                    "subscribeToTopic": "home.form1",
                                                                    "requestTopic": "git:workspace:/",
                                                                    "style": {
                                                                        "marginTop": "10px"
                                                                    }
                                                                }
                                                            }
                                                        ]
                                                    }
                                                ]
                                            }
                                        ]
                                    },
                                    {
                                        "id": "homePage",
                                        "module": "material_ui/text/Xhtml",
                                        "attributes": {
                                            "subscribeToTopic": "/Resources/home.xhtml",
                                            "style": {
                                                "marginLeft": "30px",
                                                "width": "600px"
                                            }
                                        }
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}